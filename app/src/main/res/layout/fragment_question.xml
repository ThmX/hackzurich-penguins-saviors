<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/category_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4fa5d5"
        android:gravity="center"
        android:padding="10dp"
        android:text="Category"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/question_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:gravity="center"
        android:text="TextView"
        android:textSize="25dp"
        android:textAlignment="center"
        android:padding="30dp"
        android:background="@drawable/back"
        tools:text="How long would you have to eat vegetarian to save as much CO2 as a flight from Zurich to New York produces?" />

    <RadioGroup
        android:id="@+id/question_answers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <RadioButton
            android:id="@+id/answer_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            tools:text="2 Jahre"
            android:textSize="20dp"
            android:paddingLeft="10dp"
            android:background="@drawable/back"
            android:checked="false" />

        <RadioButton
            android:id="@+id/answer_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            tools:text="1,8 Jahre"
            android:textSize="20dp"
            android:paddingLeft="10dp"
            android:background="@drawable/back"
            android:checked="false" />

        <RadioButton
            android:id="@+id/answer_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            tools:text="5 Jahre"
            android:textSize="20dp"
            android:paddingLeft="10dp"
            android:background="@drawable/back"
            android:checked="false" />

        <RadioButton
            android:id="@+id/answer_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            tools:text="100 Jahre"
            android:textSize="20dp"
            android:background="@drawable/back"
            android:paddingLeft="10dp"
            android:checked="false" />
    </RadioGroup>

</LinearLayout>
